<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="content" method="upgrade">
  <name>JM Deluxe Layer Slideshow</name>
  <author>JoomlaMan</author>
    <creationDate>2014-06-26</creationDate>
	<copyright>Copyright (C) 2013 - joomlaman.com</copyright>
	<license>http://www.gnu.org/copyleft/lgpl.html</license>
	<author>JoomlaMan</author>
	<authorEmail>support@joomlaman.com</authorEmail>
	<authorUrl>http://joomlaman.com</authorUrl>
	<version>1.3.2</version>
  <description>JM Shortcode</description>
  <files>
    <filename plugin="plg_jmshortcode">plg_jmshortcode.php</filename>
  </files>
  <config>
     <fields name="params" addfieldpath="/modules/mod_jmparallax_slideshow/admin/elements">
        <fieldset name="basic" label="Configuration">
            <field type="asset" name="asset" path="modules/mod_jmparallax_slideshow/admin/assets/"></field>
            <field name="runmode" type="list" class="jm-field single" default="0" label="Shortcode Run Mode" description="Choose onPrepareContent (content articles only) or onAfterRender (sitewide)">
                <option value="0">Content Only</option>
                <option value="1">Entire Page</option>
            </field>
        </fieldset>
        <fieldset name="advanced">
            <field name="include_jquery"  class="jm-field" type="radio" default="0" label="Include jQuery?" description="Include jQuery?">
               <option value="0">JNO</option>
               <option value="1">JYES</option>
             </field>
        </fieldset>
    </fields>
  </config>
</extension>